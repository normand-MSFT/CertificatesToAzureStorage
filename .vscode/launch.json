    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Uses existing SAS Token and Url",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}",
            "args": [
                "-ContainerUrl {ContainerUrl}",
                "-SASToken '{SASToken}"
            ]
        },
        {
            "name": "PowerShell: Create short-lived SAS token",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}",
            "args": [
                "-ResourceGroupName {ResourceGroupName}",
                "-TenantName {TenantName}",
                "-ApplicationId {ApplicationId}",
                "-ApplicationSecret {ApplicationSecret}",
                "-TokenDuration 3",
                "-CertificateFolderPath {CertificateFolderPath}",
                "-Executable {Path}\\azcopy.exe"
            ]
        }
    ]
}
